<section style="background-color:{{ section.settings.background_color }};" class="features content-stripe content-stripe--{{ section.settings.color }}">
  <div class="wrapper">
    <h2 class="uppercase-title">{{ section.settings.heading }}</h2>

    {{ section.settings.text }}

		{% if section.settings.button_label != blank and section.settings.button_link != blank %}
			<a href="{{ section.settings.button_link }}" class="btn btn--arrow">
				{{ section.settings.button_label | escape }}
			<span>→</span></a>
		{% endif %}


  </div><!-- .wrapper -->
</section>

{% schema %}
{
  "name": {
    "en": "General Content"
  },
  "class": "index-section index-section--flush",
  "settings": [
		{
			"type": "color",
			"id": "background_color",
			"label": "Background Color",
			"default": "#fff"
		},
		{
			"type": "select",
			"id": "color",
			"label": {
				"en": "Text Color"
			},
			"default": "dark",
			"options": [
				{
					"value": "dark",
					"label": {
						"en": "Dark"
					}
				},
				{
					"value": "light",
					"label": {
						"en": "Light"
					}
				}
			]
		},
		{
      "type": "text",
      "id": "heading",
      "label": {
        "en": "Heading"
      },
      "default": {
        "en": "A very important heading"
      }
    },
    {
      "type": "textarea",
      "id": "text",
      "label": {
        "en": "Text Area"
      },
      "default": {
        "en": "<h3>This is a general textarea</h3><p>Use this section for any general content by using simple html.</p>"
      }
    },
		{
      "type": "text",
      "id": "button_label",
      "label": {
        "de": "Button-Etikett",
        "en": "Button label",
        "es": "Etiqueta de botón",
        "fr": "Texte du bouton",
        "it": "Etichetta pulsante",
        "ja": "ボタンラベル",
        "pt-BR": "Etiqueta do botão"
      }
    },
    {
      "type": "url",
      "id": "button_link",
      "label": {
        "de": "Button-Etikett",
        "en": "Button link",
        "es": "Enlace de botón",
        "fr": "Lien du bouton",
        "it": "Link pulsante",
        "ja": "ボタンリンク",
        "pt-BR": "Link do botão"
      }
    }
  ],
  "presets": [
    {
      "name": "General Content Area",
      "category": "Homepage sections"
    }
  ]
}
{% endschema %}
